<main>
  
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render "users/user_info", user: @user %>
        <%= render "form", new_book: @new_book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                  <%= link_to @book.user.name, user_path(@book.user.id) %>
                  </td>
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                <td><%= @book.body %></td>
                <% if @book.user.id == current_user.id %>
                  <td><%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %></td>
                  <td><%= link_to "Destroy", "/books/#{@book.id}", method: :delete, class: "btn btn-sm btn-danger", data: {confirm: '本当に消しますか？'} %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>